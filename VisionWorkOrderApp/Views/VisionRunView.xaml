<UserControl x:Class="VisionWorkOrderApp.Views.VisionRunView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisionWorkOrderApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 작업지시 선택 -->
        <StackPanel Background="Aqua" Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="작업지시 선택"
                       FontSize="14"
                       VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding WorkOrders}"
                      SelectedItem="{Binding SelectedWorkOrder}"
                      DisplayMemberPath="ProductName"
                      Width="200"
                      Height="30"/>
        </StackPanel>
        <!-- OK / NG 카운트 -->
        <StackPanel Background="Beige" Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Border Background="Green" Padding="20,10" Margin="0,0,10,0">
                <StackPanel >
                    <TextBlock Text="OK" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding OkCount}" Foreground="White" FontSize="24" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border Background="Red" Padding="20,10">
                <StackPanel>
                    <TextBlock Text="NG" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding NgCount}" Foreground="White" FontSize="24" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            <!-- 버튼 추가 -->
             <Button Content="OK 입력" Width="80" Height="40" Margin="10,0,5,0" Command="{Binding OkCommand}"/>
             <Button Content="NG 입력" Width="80" Height="40" Margin="5,0,0,0" Command="{Binding NgCommand}"/>
        </StackPanel>
        <!-- 검사 결과 목록 -->
        <DataGrid Background="CadetBlue" 
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="시간" Binding="{Binding TimeStamp}" Width="150"/>
                <DataGridTextColumn Header="결과" Binding="{Binding Label}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

<!--{Binding OkCount} 의 경우-->
<!--ItemsSource 없음
→ DataContext 를 바로 바라봄
→ InspectionSessionViewModel.OkCount 표시!-->
    
    
<!--DisplayMemberPath="ProductName" 의 경우-->
<!--ItemsSource="{Binding WorkOrders}" 가 있음
→ DataContext 가 아니라 ItemsSource 안 객체를 바라봄
→ WorkOrder.ProductName 표시!-->
    
    
<!--만약 InspectionSessionViewModel 에 ProductName 이 있다면?-->
<!--ItemsSource="{Binding WorkOrders}" 가 있는 이상
→ 무조건 WorkOrder.ProductName 을 봐요!
→ InspectionSessionViewModel.ProductName 은 무시!-->
    
