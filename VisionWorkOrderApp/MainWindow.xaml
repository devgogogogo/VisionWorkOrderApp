<Window x:Class="VisionWorkOrderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisionWorkOrderApp"
        mc:Ignorable="d"
        Title="Vision Work Order App" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- 왼쪽: 메뉴 -->
        <Border Grid.Column="0" Background="#2B2B2B">
            <StackPanel Margin="12">
                <TextBlock Text="MENU"
                           Foreground="White"
                           FontSize="16"
                           Margin="0,0,0,12"/>
                <Button Content="작업지시 관리"
                        Height="44"
                        Margin="0,0,0,8"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalContentAlignment="Left"
                        Padding="14,0" 
                        Click="Button_ClicK"/>
                <Button Content="비전 검사 실행"
                        Height="44"
                        Margin="0,0,0,8"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalContentAlignment="Left"
                        Padding="14,0" 
                        Click="BtnVisionRun_Click"/>
                <Button Content="검사 결과 이력"
                        Height="44"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalContentAlignment="Left"
                        Padding="14,0" 
                        Click="BtnResultHistory_Click"/>
                <Button Content="설비 관리"
                        Height="44"
                        Margin="0,0,0,8"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalContentAlignment="Left"
                        Padding="14,0"
                        Click="BtnEquipment_Click"/>
            </StackPanel>
        </Border>
        <Grid Grid.Column="1" Background="Chocolate">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       Background="Beige"
                       x:Name="PageTile"
                       Text="작업지시 관리"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Margin="16"/>
            <Border x:Name="contenArea"
                    Grid.Row="1"
                    Background="Beige"
                    Margin="16"
                    Padding="16">
                <!--여기가 UserControl을 통째로 끼워 넣는 자리-->
                <ContentControl x:Name="MainContent"/>
            </Border>
        </Grid>
    </Grid>
</Window>
